{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "web": "turbo run dev --filter=web",
    "mobile": "turbo run start --filter=mobile",
    "mobile:android": "turbo run android --filter=mobile",
    "mobile:ios": "turbo run ios --filter=mobile"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "react-native-mmkv": "^4.1.1"
  }
}
